<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>Route:</strong>
  <%= @train.route.name %>
</p>

<strong>Список вагонов:</strong>
<% if @train.numbers_order? %>
<p>
  <% @train.wagons.from_head.each do |wagon| %>
  <%= link_to "#{wagon.number}", wagon_path(wagon) %>
  <% end %>
</p>
<% else %>
  <% @train.wagons.from_tail.each do |wagon| %>
  <%= link_to "#{wagon.number}", wagon_path(wagon) %>
  <% end %>
<% end %>



<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
