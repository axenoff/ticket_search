<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Route</th>
      <th>Train</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= "#{ticket.first_name} #{ticket.middle_name} #{ticket.last_name}" %></td>
        <td><%= "#{ticket.start_station.title} - #{ticket.finish_station.title}" %></td>
        <td><%= "Train â„–#{ticket.train.number}" if ticket.train.present? %></td>
        <td><%= link_to 'Show', [:admin, ticket] %></td>
        <td><%= link_to 'Edit', edit_admin_ticket_path(ticket)  %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

