<h1>New Wagon</h1>

<%= form_for [@train, @wagon] do |f| %>
  <% if @wagon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wagon.errors.count, "error") %> prohibited this wagon from being saved:</h2>

      <ul>
      <% @wagon.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "field"> 
    <%= f.select(:type) do %>
      <% [['Coupe', 'CoupeWagon'], ['Economy', 'EconomyWagon'], ['Sleep', 'SleepWagon'], ['Sitting', 'SittingWagon']].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :bottom_seats %>
    <%= f.text_field :bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :top_seats %>
    <%= f.text_field :top_seats %>
  </div>

  <div class="field">
    <%= f.label :side_bottom_seats %>
    <%= f.text_field :side_bottom_seats %>
  </div>

  <div class="field">
    <%= f.label :side_top_seats %>
    <%= f.text_field :side_top_seats %>
  </div>

  <div class="field">
    <%= f.label :sitting_places %>
    <%= f.text_field :sitting_places %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', @train %>